<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:background="@color/gray_200"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/stationLyt_name_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Waterfront Resort" />

    <TextView
        android:id="@+id/stationLyt_city_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Pokhara" />

    <TextView
        android:id="@+id/stationLyt_province_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Gandaki" />

    <TextView
        android:id="@+id/stationLyt_address_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Pokhara" />

    <TextView
        android:id="@+id/stationLyt_phoneNum_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="+97761420004" />

    <TextView
        android:id="@+id/stationLyt_supportedTypes_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Car" />

    <TextView
        android:id="@+id/stationLyt_longitude_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="27.43525489831263" />

    <TextView
        android:id="@+id/stationLyt_latitude_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="85.0354169200935" />


</LinearLayout>
