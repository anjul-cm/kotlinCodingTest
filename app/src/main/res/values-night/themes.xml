<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KotlinCodingTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#3B6A70</item>
        <item name="colorPrimaryVariant">#32595E</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#81C784</item>
        <item name="colorSecondaryVariant">#A5D6A7</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:colorBackground">#1D1D1E</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/bevietnamproregular</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="SplashTheme" parent="Theme.KotlinCodingTest">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">14sp</item>
    </style>
</resources>